<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>ABC Hospital</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/dashboard.css">
</head>

<body>
    <div class="container">
        <%- include('partials/messages.ejs') %>
        <div class="wrap">
          <div>
            <h1 class="mt-4">Dashboard</h1>
          </div>
          <div class="logout">
            <a href="/logout" class="btn btn-danger">Logout</a>
          </div>
        </div>
        <p class="lead mb-3"> Welcome User</p>
        <hr>
        <div class="row">
          <div class="col-sm-4">
            <div class="card bg-light">
              <div class="card-body text-center">
                <h5 class="card-title">Register a patient</h5>
                <a href="/registerPatient" class="btn btn-primary">Register</a>
              </div>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="card">
              <div class="card-body text-center">
                <h5 class="card-title">Show all patients</h5>
                <a href="/patients" class="btn btn-secondary">All Patients</a>
              </div>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="card bg-light">
              <div class="card-body text-center">
                <h5 class="card-title">Search a patient</h5>
                <a href="/search" class="btn btn-success">Search</a>
              </div>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="card">
              <div class="card-body text-center">
                <h5 class="card-title">Update a patient</h5>
                <a href="/update" class="btn btn-warning">Update</a>
              </div>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="card bg-light">
              <div class="card-body text-center">
                <h5 class="card-title">Delete a patient</h5>
                <a href="/delete" class="btn btn-info">Delete</a>
              </div>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="card">
              <div class="card-body text-center">
                <h5 class="card-title">Delete a patient</h5>
                <a href="/delete" class="btn btn-primary">Delete</a>
              </div>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="card bg-light">
              <div class="card-body text-center">
                <h5 class="card-title">Delete a patient</h5>
                <a href="/delete" class="btn btn-primary">Delete</a>
              </div>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="card">
              <div class="card-body text-center">
                <h5 class="card-title">Delete a patient</h5>
                <a href="/delete" class="btn btn-primary">Delete</a>
              </div>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="card bg-light">
              <div class="card-body text-center">
                <h5 class="card-title">Delete a patient</h5>
                <a href="/delete" class="btn btn-primary">Delete</a>
              </div>
            </div>
          </div>
        </div>
    </div>
    <!-- Script -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>

</html>
